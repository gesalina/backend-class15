<div class="">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Lista de productos</h2>

    <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
        {{#each products }}
      <div class="group relative">
        
<div class="w-full max-w-sm bg-white rounded-lg shadow ">
    <a href="#">
        <img class="p-8 rounded-t-lg" src="{{this.thumbnail}}" alt="product image" />
    </a>
    <div class="px-5 pb-5">
        <a href="#">
            <h5 class="text-xl font-semibold tracking-tight text-gray-900">{{this.title}}</h5>
        </a>
            <p class="mt-1 text-sm text-gray-500">{{this.description}}</p>
            <p class="mt-1 text-sm text-gray-500">{{this.stock}}</p>
            <p class="mt-1 text-sm text-gray-500">{{this.code}}</p>

        <div class="flex items-center justify-between">
            <span class="text-3xl font-bold text-gray-900">${{this.price}}</span>
            <a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add to cart</a>
        </div>
    </div>
</div>

      </div>
      {{/each}}
    </div>
  </div>
</div>









